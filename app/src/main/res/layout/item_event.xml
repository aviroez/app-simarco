<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.beardedhen.androidbootstrap.BootstrapWell
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_md">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/text_title_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Title"
                android:textSize="24sp"
                android:textStyle="bold"
                app:bootstrapBrand="primary" />

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/text_activity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/activity"
                android:textSize="14sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_xs"
                android:layout_marginBottom="@dimen/margin_md"
                android:background="@drawable/separator_horizontal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_address_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/input_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.beardedhen.androidbootstrap.AwesomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margin_sm"
                        android:layout_marginRight="@dimen/margin_sm"
                        android:text="@string/from_label"
                        app:bootstrapBrand="info" />

                    <com.beardedhen.androidbootstrap.AwesomeTextView
                        android:id="@+id/text_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="dd/mm/yyyy"
                        app:bootstrapBrand="info" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <com.beardedhen.androidbootstrap.AwesomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margin_sm"
                        android:layout_marginRight="@dimen/margin_sm"
                        android:text="@string/to_label"
                        app:bootstrapBrand="success" />

                    <com.beardedhen.androidbootstrap.AwesomeTextView
                        android:id="@+id/text_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text="dd/mm/yyyy"
                        app:bootstrapBrand="success" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.beardedhen.androidbootstrap.BootstrapWell>

</LinearLayout>